<div class="gray_background">
  <div class="wrapper clearfix">
    <div class="main_content <%= "payment_options" if Settings.use_payment_options %>">
      <h3><%= Settings.value_proposition %></h3>
        <div id="video">
          <% if Settings.use_video_placeholder %>
            <div id="video_image">
              <img alt="video_place_holder" width='512px' height='385px' src="/assets/video_placeholder.png" />
            </div>
            <div id="player" class="hidden" style="display: none;">
              <object width="512" height="385">
                <param name="movie" value="<%= Settings.video_embed_url %>?autohide=1&showinfo=0&rel=0&autoplay=1" />
                <param name="allowFullScreen" value="true" />
                <param name="allowscriptaccess" value="always" />
                <embed src="<%= Settings.video_embed_url %>?autohide=1&showinfo=0&rel=0&autoplay=1" type="application/x-shockwave-flash" width="512" height="385" allowscriptaccess="always" allowfullscreen="true"></embed>
              </object>
            </div>
          <% else %>
            <iframe width='512' height='385' src="<%= video_url %>"></iframe>
          <% end %>
        </div>
      <p>
        Please select your package.
      </p>

      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios1" value="option1">
          Bronze package - 100€
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios2" value="option2">
          Silver package - 200€
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios3" value="option3">
          Gold package - 500€
        </label>
      </div>
      <div class="radio">
        <label>
          <input type="radio" name="optionsRadios" id="optionsRadios3" value="option4">
          Platinum package - 1000€
        </label>
      </div>

      <p>
          Please enter your email address below.
      </p>
      <input type="email" class="form-control" placeholder="Email">
      <%= link_to "Confirm my support", root_path, class: "btn btn-primary" %>

    </div>
    <%= render 'preorder/checkout/sidebar' %>
  </div>
</div>
